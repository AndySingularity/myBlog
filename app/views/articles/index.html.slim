- @articles.each do |post|
	div.col-md-8.col-md-offset-2
		div.thumbnail
			- if post.img?
				= image_tag post.img.url(:medium), :class => 'thumbnail'
			div.caption.center
				h3
					= link_to post.title, article_path(post.id)
				p
					= post.description